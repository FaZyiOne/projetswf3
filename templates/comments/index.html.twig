{% include 'base.html.twig' %}

{% include 'nav.html.twig' %}

{% block title %}Commentaires index{% endblock %}

{% block body %}
    <h1>Commentaires index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commentaire</th>
                <th>Date et Heure</th>
                <th>Utilisateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.Comment }}</td>
                <td>{{ comment.createdAt ? comment.createdAt|date('d-m-Y - H:i:s') : '' }}</td>
                <td>{% if comment.User %}
                        {{ comment.User }}
                    {% else %}
                        <i>Anonyme<i>
                    {% endif %}
                </td>

                <td>
                    <a href="{{ path('comments_show', {'id': comment.id}) }}">show</a>
                    <a href="{{ path('comments_edit', {'id': comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun commentaire trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comments_new') }}">Créer un nouveau commentaire</a>

