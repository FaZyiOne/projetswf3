{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ reservation.lieu }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/reservation/')}}{{ reservation.image }}"</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ reservation.adresse }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ reservation.telephone }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ reservation.prix }} Euros</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reservation.description }}</td>
            </tr>
            <tr>
                <th>Capacite</th>
                <td>{{ reservation.capacite }} pers.</td>
            </tr>
            
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('reservation_index') }}">back to list</a>

    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
    {% endif %}

    <hr>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <h1>Commentaires</h1>
    {{ form_start(form) }}
            {{ form_widget(form) }}
            <input type="submit" value="Create" />
        {{ form_end(form) }}
        {% for rpost in rposts %}
        <p>Post√© par {{ rpost.User }} le {{ rpost.date.date|date('d/m/y h:i')}}</p>
            {{ rpost.commentaire }}
        {% endfor %}
    {% endif %}
{% endblock %}
