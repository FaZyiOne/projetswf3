{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}
{% block body %}
<div class="container-fluide">
    <header>
        {% include 'nav.html.twig' %}
    </header>
    {% block main %}

    <main id="pAvis">
        <section class="text-center">

    <h1>Avis</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commentaire</th>
                <th>Date</th>
                <th>Utilisateur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.commentaire }}</td>
                <td>{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.user }}</td>
                
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}" title="Voir l'avis"><i class="fas fa-eye"></i></a> |
                    <a href="{{ path('post_edit', {'id': post.id}) }}" title="Modifier"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'avis</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('post_new') }}" class="btn btn2">Ajouter un avis</a> 
    </section>
    </main>
    {% endblock %}
    {% include 'footer.html.twig' %}
</div>
{% endblock %}