<form method="post" action="{{ path('post_delete', {'id': post.id}) }}" onsubmit="return confirm('
Êtes-vous sûr de bien vouloir supprimer cet avis?');">
    <input type="hidden" name="_method" value="DELETE"> 
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button class="btn bg bg-danger text-light">Supprimer</button>
</form>
