                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <form method="post" action="{{ path('salles') }}" class="form-filtre">
            <h1 class="m-5">Trouver la salle Idéale</h1>
            <div class="form-group">
                <div class="col-xs-12 col-md-3">
                    <i class="fas fa-map-marker-alt"></i>
                    <input type="text" class="form-control pl-5 p-4" placeholder="Ville: Paris, Lyon, Bordeaux"
                        name="ville" id="ville" onchange="this.value = this.value.toUpperCase()">
                </div>
                <div class="col-xs-12 col-md-3">
                    <i class="fas fa-search"></i>
                    <input type="text" class="form-control milieu pl-5 p-4" placeholder="Capacité max (40 à 400 pers.)"
                        name="capacite" id="capacite">
                </div>
                <button type="submit" class="btn1 btn col-xs-10 col-md-2">Rechercher</button>
            </div>
        </form>
    </header>
